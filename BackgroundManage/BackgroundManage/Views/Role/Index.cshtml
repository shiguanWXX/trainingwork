
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section script
{
<script src="~/Scripts/roleList.js"></script>
}
<h4 style="color: #428bca">角色</h4>
<div class="row" style="margin-bottom: 15px;">
    <div class="col-md-6">
        <input type="text" name="RoleName" class="form-control" id="RoleName" placeholder="角色名">
        
    </div>
    <div class="col-md-6">
        <input type="button" class="btn btn-info" onclick="Search()" value="搜索" />
        <input type="button" class="btn btn-info" onclick="ShowModal()" value="新增" /> 
    </div>
</div>
<div class="row-border">
    <table id="roletable" class="display" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>操作</th>
            <th>角色Id</th>
            <th>角色名</th>
            <th>编码</th>
            <th>描述</th>
        </tr>
        </thead>
    </table>
</div>
<form id="role-form">
    <div class="modal fade" id="myRole" tabindex="-1" role="dialog" aria-labelledby="myRoleLabel">
    </div>
</form>
